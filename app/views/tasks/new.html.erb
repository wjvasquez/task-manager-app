<h1>New Task</h1>

<%= form_with model: @task do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @task.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @task.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :due_date %><br>
    <%= form.date_field :due_date %>
    <% @task.errors.full_messages_for(:due_date).each do |message| %>
      <%= message %>
    <% end %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.text_field :status %>
    <% @task.errors.full_messages_for(:status).each do |message| %>
      <%= message %>
    <% end %>
  </div>

  <div>
    <%= form.submit "Save Task" %>
  </div>
<% end %>

<%= link_to "Back", root_path %>
